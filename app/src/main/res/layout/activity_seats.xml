<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iyashwant.movieapp.Seats">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="80dp"
     android:background="@color/black">

     <TextView
         android:layout_width="10sp"
         android:layout_height="20dp"
         android:layout_centerVertical="true"
         android:layout_toStartOf="@+id/textV_price"
         android:text="â‚¹"
         android:textColor="@color/white" />
     <TextView
         android:id="@+id/textV_price"
         android:textColor="@color/white"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="59dp" />

     <TextView
         android:id="@+id/textV_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/white"
         android:layout_above="@+id/textV_price"
         android:layout_alignParentStart="true"
         android:layout_marginStart="19dp"
         android:text="TextView" />

     <TextView
         android:id="@+id/textV_details"
         android:textColor="@color/white"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         android:text="TextView"
         android:layout_below="@+id/textV_price"
         android:layout_alignStart="@+id/textV_name" />


 </RelativeLayout>


    <GridView
        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="70dp"
        android:numColumns="14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="10"

        android:orientation="horizontal">



        <GridView
        android:id="@+id/grid_seats"
        android:numColumns="6"
        android:layout_width="168dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content"
        />

        <GridView
            android:id="@+id/grid_seats2"
            android:numColumns="6"
            android:layout_width="168dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="33dp"

            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="screen is here"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_gravity="center"
        android:gravity="center_horizontal" />

    <Button
        android:layout_weight="0.1"
        android:id="@+id/button_seatNext"
        android:paddingBottom="10dp"
        android:text="Book"
        android:gravity="center|bottom"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
