<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/details_background_confirm"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/black_stroke"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <Space
        android:layout_width="match_parent"
        android:layout_height="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30sp" />


        <ImageView
            android:id="@+id/conf_image"
            android:layout_width="match_parent"
            android:layout_height="190sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="   Booking Confirmation   "
        android:textColor="#f9f9f9"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <TextView
        android:id="@+id/conf_bookid"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:text=" Booking ID "
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
         />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:paddingLeft="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/conf_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:text="Sample"
                    android:paddingTop="5sp"/>





            </LinearLayout>

            <TextView
                android:id="@+id/conf_theatre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="Sample"
                android:paddingTop="5sp"/>


            <TextView
                android:id="@+id/conf_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="Sample"
                android:paddingTop="5sp"/>

        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="horizontal">



        </LinearLayout>

        <Button
            android:id="@+id/buttonBook"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book more movies"
            android:layout_alignBottom="@+id/thanks"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    </LinearLayout>


</LinearLayout>
