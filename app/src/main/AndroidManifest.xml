<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iyashwant.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Signup" />
        <activity
            android:name=".Movies"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".Seats" />
        <activity android:name=".Select" />
        <activity android:name=".MovieDetails" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Payment" />
        <activity android:name=".BookingConfirm" />
        <activity android:name=".SelectFood" />
        <activity android:name=".ListBook"></activity>
    </application>

</manifest>